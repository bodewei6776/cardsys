.w96
  .fform
    .fformbox
      = form_for @members_card do |f|
        .fformbox_bt
          %p 会员卡充值
        .fformbox_nr
          %ul
            %li
              .w1 所属会员：
              .w2
                = @members_card.member.name
              .w1 卡类型：
              .w2
                = @members_card.card_type_in_chinese
          %ul
            %li
              .w1 卡内金额：
              .w2
                = @members_card.left_fee
                　元
              .w1 充金额：
              .w2
                = f.text_field :recharge_fee, :value => "0"
          %ul
            %li
              .w1 有效期：
              .w2
                - time = @members_card.expire_date
                = time.blank? ? "未知" : time.strftime("%Y-%m-%d")
              .w1 修改有效期：
              .w2
                = f.text_field :recharge_expire_date, :class => "date-input-type", :value => @members_card.expire_date.strftime("%Y-%m-%d")
          %ul
            %li
              .w1 卡内次数：
              .w2
                = @members_card.left_times
                次
              .w1 充次数：
              .w2
                = f.text_field :recharge_times, :value => "0"
          %ul
            %li
              .w1 充值人：
              .w2
                = f.text_field :login
              .w1 密码：
              .w2
                = f.password_field :password
      
          %ul
            %li{:style => "text-align:center"}
              = f.submit "充值", :class => "btn"
      
