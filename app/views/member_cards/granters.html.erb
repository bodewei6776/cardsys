<div class="w96">
  <div class=" r_bt" >
    <div class=" r_bt_l" >
      <div class=" r_bt_l_a" ></div>
      <div class=" r_bt_l_c fb white" >会员查询</div>
    </div>

    <div class=" r_bt_r" ></div>
  </div>
  <div class="soso">
    <form method="post" action="/member_cards/granters" class="form-profile" id="search_form">
      <%= hidden_field_tag "_method","get"%>
      <div class="w95">
        会员名称：
        <label for="name">
          <input type="text" name="member_name" maxlength="24" tabindex="1" value="<%=params[:member_name] %>" class="inputtext" autocomplete="/members/autocomplete_name" />
        </label>&nbsp;&nbsp;&nbsp;&nbsp;

        <input type="submit" name="search" id="search_member" class="inputsubmit" value="查询"  tabindex="10" />
        <%unless @member_cards.blank? %>
          <br>
          <div id='member_cards_list'>
          <label for="card_id">选择充值的会员卡号：</label>
          <% for member_card in @member_cards %>
            <% unless member_card.card_serial_num.blank? %>
              <%= radio_button_tag("card_serial_num", member_card.card_serial_num, (member_card.card_serial_num == @serial_num)? true : false)%><%=member_card.card_serial_num%>
            <%end%>
          <%end%>
          </div>
        <%end%>
      </div>
    </form>
  </div>
   <div class="h10"></div>


   <% unless @member_card.new_record?%>

<div class=" clearfix cleft">
  <ul class="clearfix">
    <fieldset class="hidden">
      <legend></legend>
         <li class ="cleft">
        <div class="w1">注册日期：</div>
        <div class="w2">
          <%= DateUtil::timeshort(@member_card.created_at) %>
        </div>
        <div class="w1">有效期：</div>
        <div class="w2">
          <%= @member_card.expire_date%>
        </div>
      </li>

      <li class ="cleft">
        <div class="w1">卡余额/卡余次：</div>
        <div class="w2">
          <%= @member_card.left_fee_value %>
        </div>
        <div class="w1">会员卡状态：</div>
        <div class="w2">
          <%= @member_card.status_desc %>
        </div>
      </li>

    </fieldset>
  </ul>
</div>

<% end %>




  <div class="h10"></div>
  <div class=" r_bt" >
    <div class=" r_bt_l" >
      <div class=" r_bt_l_a" ></div>
      <div class=" r_bt_l_c fb white" >授权人列表</div>
    </div>
    <div class=" r_bt_r" >
      <% if @member_card.member.present? %>
        <%= link_to '添加授权人', {:action => :granter_new, :controller => "members",:member_id => @member_card.member.id,
        :member_card_id => @member_card.id}, :class => "granter_new submit2 hand" %>
      <% end %>
 
    </div>
  </div>

  <div class=" table">
        <ul class="bttitle black fb " >
      <li class="w5">编号</li>
      <li class="w10">会员名称</li>
      <li class="w15">会员卡信息</li>
      <li class="w10">移动电话</li>
      <li class="w8">注册日期</li>

      <!--
      <li class="w6">现有金额</li>
      <li class="w6">现有次数</li>
      <li class="w6">消费金额</li>
      <li class="w6">消费次数</li>
      -->
      <li class="w8">会员生日</li>
      <li class="w12">操作</li>
    </ul>
    <% @member_card.granters.each_with_index do |member,index| -%>
      <ul class="member_items table_items">
        <li class="w5"><%= index + 1 %></li>
        <li class="w10"><%= link_to member.name,member %></li>
        <li class="w15" style='overflow:hidden;' title="<%= raw member.card_serial_nums %>"><%= raw member.card_serial_nums %></li>
        <li class="w10"><%= member.mobile %></li>
        <li class="w8"><%= member.created_at.nil? ? "" : DateUtil::timeshort(member.created_at) %></li>
        <!--
        <li class="w6"><%= member.member_card_left_fees %></li>
        <li class="w6"><%= member.member_card_left_times %></li>
        <li class="w6"><%= member.member_consume_amounts %></li>
        <li class="w6"><%= member.use_card_times%></li>
        -->
        <li class="w8">
        <%= member.birthday.blank? ? ':' : DateUtil::timeshort(member.birthday) %>
        </li>
        <li class="w12">
        <% if member.member_card_granter.enabled? %>
          <%= link_to '停用', switch_member_card_granter_path(member.member_card_granter) , :confirm => '确定停用么?', :method => :put%>
        <% else %>
          <%= link_to '启用', switch_member_card_granter_path(member.member_card_granter), :confirm => '确定删除吗?', :method => :put,:confirm => "确定启用么"%>
        <%end%>
        </li>
      </ul>
    <%end -%>
  </div>


</div>
<script type="text/javascript">
  $(document).ready(function(){
      $(":radio").click(function(){
        var form = $("form[0]");
        form.attr("action", "/member_cards/granters?p=num");
        form.submit();
        });

      $(".granter_new").colorbox({width:"90%", height:"90%", iframe:false});
      });
</script>


