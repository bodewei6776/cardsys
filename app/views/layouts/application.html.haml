-# encoding: utf-8
!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title= content_for?(:title) ? yield(:title) : Setting.site_name
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    / Le styles
    :css
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    = stylesheet_link_tag "application", :media => "all"
    / Le fav and touch icons
    %link{:href => "images/favicon.ico", :rel => "shortcut icon"}/
    %link{:href => "images/apple-touch-icon.png", :rel => "apple-touch-icon"}/
    %link{:href => "images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
    %link{:href => "images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}/

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "/"}
            = Setting.site_name
          .container.nav-collapse
            %ul.nav
              = render :partial => "layouts/header_menu"
            %ul.nav.pull-right
              %li= link_to current_user.login, account_path
              %li= link_to "退出", user_session_path, :method => :destroy

    .container
      .content
        - if flash[:notice]
          .alert
            %a{:class => "close", "data-dismiss" => "alert"} x
            %strong= flash[:notice]
        .row
          .span2
            #datepicker
            .well.sidebar-nav
              %ul.nav.nav-pills.nav-stacked
                %li.nav
                =render :partial => "layouts/menu"
          .span10
            = yield
    
      %hr
      %footer
        %p &copy; Broadwell Club Mangement System  博德维球馆管理系统 #{link_to "www.broadwell.cn","www.broadwell.cn"}
    /
      Le javascript
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application", "m97/WdatePicker", "new_datepicker"
    :javascript
      function jump_to_somewhere(dp){
        var dateText = dp.cal.getDateStr();
          $("#calendar_con").val(dateText);
            var domain = document.domain;
            var port = window.location.port;
            var urls = ["http://",domain];
            if(port && port != ''){
              urls.push(":" + port)
            }
            if(window.location.pathname.match(/rents/))
            { 
              urls.push("/rents?date=" + dateText)
            }
            else{
              urls.push("/orders?date=" + dateText)
            }
            window.location.href=urls.join('');
        }
    
      $(document).ready(function() {
        WdatePicker({startDate:'#{Date.today.strftime("%Y-%m-%d")}',eCont:'datepicker',onpicked:function(dp){jump_to_somewhere(dp);}, lang:"zh-cn",isShowToday:true})
        $(".popup-new-window").colorbox({width:"900", height:"600", iframe:true});
        $(".date-type-input").new_datepicker();
        $(".select-date").new_datepicker();})
    

      $(document).ready(function() {
        #{ yield :javascripts }
      });
