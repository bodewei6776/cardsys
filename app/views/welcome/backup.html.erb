<div class='w96'>
<div class=" r_bt" >
  <div class=" r_bt_l" >
    <div class=" r_bt_l_a" ></div>
    <div class=" r_bt_l_c fb white" > 数据备份</div>
  </div>

    <div class=" r_bt_r" >
      <button onclick="window.location.href='/welcome/backup_db'" class="submit2 hand" type="button">现在备份</button>
    </div>
 
</div>


  <div class=" table">
    <ul class="bttitle black fb " >
      <li class="w5">编号</li>
      <li class="w20">时间</li>
      <li class="w20">文件大小</li>
      <li class="w30">存储地址</li>
      <li class="w15">操作</li>
    </ul>
    <%@backups.each_with_index do |backup,index|%>
      <% backup = Pathname.new(backup)%>
      <ul class="table_items">
        <li class="w5"><%= index + 1%></li>
        <li class="w20"><%= backup.ctime.strftime("%Y-%m-%d %H:%M")%></li>
        <li class="w20"><%= number_to_human(backup.size, :units => {:unit => "", :thousand => "KB"})%></li>
        <li class="w30"><%=backup.basename.expand_path.to_s%></li>
       <li class="w15">
       <%= link_to '删除', welcome_delete_backup_path(:name => backup.basename.expand_path.to_s), :confirm => '确定删除？', :method => :delete %>
        </li>
      </ul>
    <%end%>
  </div>



<div class='h10'></div>
<div class='h10'></div>
<div class='h10'></div>
<div class='h10'></div>

</div>
</div>
