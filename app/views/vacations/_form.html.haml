=render :partial => "layouts/errors", :locals => { :target => @vacation }
= form_for(@vacation) do |f|
  .fform
    .fformbox
      .fformbox_bt
        %p 填写节假日信息
      .fformbox_nr
        %ul
          %li
            .w1 假日名称：
            .w2
              = f.text_field :name
        %ul
          %li
            .w1 开始时间：
            .w2
              %input#start_date{:name => "vacation[start_date]", :type => "text", :value => (@vacation.start_date.try(:to_chinese_ymd))}/
            .w1 结束时间：
            .w2
              %input#end_date{:name => "vacation[end_date]", :type => "text", :value => (@vacation.end_date.try(:to_chinese_ymd))}/
    .h10
    .input_bd
      %button.submit1.hand{:type => "submit"}> 提交
      \&nbsp;&nbsp;&nbsp;&nbsp;
      %button.submit2.hand{:onclick => "window.location.href='/vacations'", :type => "button"} 返回
    .clear
:javascript
  $(function() {
    $("#start_date").new_datepicker({dateFormat: 'yy-mm-dd'});
    $("#end_date").new_datepicker({dateFormat: 'yy-mm-dd'});
  });

