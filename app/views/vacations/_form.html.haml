= form_header(:title => "节假日", :link => vacations_path)
=render :partial => "layouts/errors", :locals => { :target => @vacation }
= form_for(@vacation, :html => { :class => "form-horizontal well"}) do |f|
  - control_helper("name", "名称") do
    = f.text_field :name

  - control_helper("start_date", "开始时间") do
    = f.text_field :start_date, :value => @vacation.start_date.try(:to_chinese_ymd)

  - control_helper("end_date", "结束时间") do
    = f.text_field :end_date, :value => @vacation.end_date.try(:to_chinese_ymd)

  .form-actions
    = f.submit "提交", :class => "btn "
    = link_to "返回", vacations_path, :class => "btn"

= content_for :javascripts do
  $("#start_date").new_datepicker({dateFormat: 'yy-mm-dd'});
  $("#end_date").new_datepicker({dateFormat: 'yy-mm-dd'});

