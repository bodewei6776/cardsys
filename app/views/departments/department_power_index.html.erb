<%= content_for :head_content do%>
  <%= stylesheet_link_tag "checktree" %>
  <style>
    #holder{
      margin-left: 20px;
    }
    ul.tree{
      margin-left: 40px;
    }
    ul.tree label{
      margin-left: 5px;
    }

  </style>
<%end%>

<script type='text/javascript'>
  $(document).ready(function(){
      $("input[type=checkbox]").click(function(){
          if($(this).is(":checked") && $(this).attr('parent_id') !== undefined){
            $("input[type=checkbox][value=" + $(this).attr('parent_id') +"]").attr('checked','checked');
          }
        });
 
});
</script> 
<div id='holder' >

  <%if @notice%><p class="notice"><%= @notice %></p><%end%>

  <div class=" r_bt" >
    <div class=" r_bt_l" >
      <div class=" r_bt_l_a" ></div>
      <div class=" r_bt_l_c fb white" > 部门：　(<%= @department.name%>)</div>
    </div>
  </div>



<%= form_for :department, @department, :url => {:action => "department_power_update"}, :html => {:class => "form-profile"} do |f|%>
    <%= hidden_field_tag "id",@department.id.to_s%>
    <%= raw powers_tree(@department.powers)%> 
    <%= f.submit "修改了",:class => "submit1"%>
  <%end%>


