<div class="w96">
  <div class=" r_bt" >
    <div class=" r_bt_l" >
      <div class=" r_bt_l_a" ></div>
      <div class=" r_bt_l_c fb white" >时段价格列表</div>
    </div>
    <div class=" r_bt_r" >
      <button onclick="window.location.href='/courts/new'" class="submit2 hand" type="button">创建场地</button>
    </div>
  </div>
  <div class=" table">
    <ul class="bttitle black fb " >
      <li class="w5">编号</li>
      <li class="w10">名称</li>
      <li class="w10">开始时间</li>
      <li class="w10">结束时间</li>
      <li class="w10">状态</li>
      <li class="w15">说明</li>
      <li class="w15">操作</li>
    </ul>
    <%@courts.each_with_index do |court,index|%>
      <ul class="table_items">
        <li class="w5"><%= index + 1 %></li>
        <li class="w10"><%= court.name%></li>
        <li class="w10"><%= court.start_time %></li>
        <li class="w10"><%= court.end_time %></li>
        <li class="w10"><%= generate_court_status_str(court.status) %></li>
        <li class="w15"><%= court.description %></li>
        <li class="w15"><%= link_to '查看', court %>
          | <%= link_to '修改', edit_court_path(court) %>
          | <% if court.status == CommonResource::COURT_ON  %>
            <%= link_to '停用', {:controller => :courts, :action => :change_status, :status => 0, :id => court.id}, {:confirm => '确定停用吗?'} %>
          <% elsif court.status == CommonResource::COURT_OFF%>
            <%= link_to '启用', {:controller => :courts, :action => :change_status, :status => 1, :id => court.id}, {:confirm => '确定启用吗?'} %>
          <%end%>
        </li>
      </ul>
    <%end%>
  </div>
</div>