<div class="w96">
  <div class=" r_bt" >
    <div class=" r_bt_l" >
      <div class=" r_bt_l_a" ></div>
      <div class=" r_bt_l_c fb white" >教练预定信息查询</div>
    </div>
    <div class=" r_bt_r" >
    </div>
  </div>
  <div class="soso">
    <form method="post" action="/courts/coach_status_search" class="form-profile" id="search_form">
      <div class="w95">
        场地名称：
        <label>
          <input type="text" name="name" maxlength="30" tabindex="1" value="<%=params[:name] %>" class="inputtext"/>
        </label>
        &nbsp;&nbsp;&nbsp;&nbsp;
        预定会员：
        <label>
          <input type="text" name="member_name"  value="<%=params[:member_name] %>" autocomplete="/members/autocomplete_name"/>
        </label>
        &nbsp;&nbsp;&nbsp;&nbsp;
        <input type="submit" name="search" id="search_member" class="inputsubmit" value="查询"  tabindex="10" />
        <style type="text/css">
          #adv_search div{width:750px;padding: 5px;margin-left:-30px }
          #adv_search div label{width: 80px;text-align: right;}
        </style>
        <div id="adv_search"  class="w95">
          <div>
            <label for="card_id">预定日期：</label>
            <input type="text" name="search_date" value="<%=params[:search_date]%>" onblur="return;" id="search_date" class="inputtext" />
            <label for="card_id">预定时段：</label>
            <select name="start_hour" id="start_hour" class="select" onchange="check_time();">
              <%= generate_time_options(0) %>
            </select>-
            <select name="end_hour" id="end_hour" class="select" onchange="check_time();">
              <%= generate_time_options(24) %>
            </select>
          </div>
        </div>
      </div>
    </form>
  </div>
  <div class="h10"></div>
  <div class=" r_bt" >
    <div class=" r_bt_l" >
      <div class=" r_bt_l_a" ></div>
      <div class=" r_bt_l_c fb white" >场地预定列表</div>
    </div>
    <div class=" r_bt_r" ></div>
  </div>
  <div class=" table">
    <ul class="bttitle black fb " >
      <li class="w5">序号</li>
      <li class="w10">场地</li>
      <li class="w10">会员姓名</li>
      <li class="w10">当前状态</li>
      <li class="w10">日期</li>
      <li class="w10">时段</li>
      <li class="w10">详情</li>
    </ul>
    <%@order_items.each_with_index do |order_item,index|%>
      <ul class="table_items">
        <li class="w5"><%= index + 1 %></li>
        <li class="w10"><%= order_item.product.court.name %></li>
        <li class="w10"><%= order_item.member_name %></li>
        <li class="w10"><%= order_item.status_str %></li>
        <li class="w10"><%= DateUtil.timeshort(order_item.product.record_date) %></li>
        <li class="w10"><%= order_item.product.start_hour %> - <%= order_item.product.end_hour %></li>
        <li class="w10"></li>
      </ul>
    <%end%>
  </div>
  <div class="h10"></div>
  <div class="pages">
    <%= will_paginate @order_items, :sp => 1%>
  </div>
  <div class="h10"></div>
</div>
<script type="text/javascript">
  $(function() {
    $("#search_date").datepicker({dateFormat: 'yy-mm-dd'});
  });
  function fsubmit(){
    var form = $("form[0]");
    form.submit();
  }
  $(".record_detail").colorbox({width:"80%", height:"80%", iframe:false});
  function check_time(){
    var start_time = $("#start_hour")[0].value;
    var end_time = $("#end_hour")[0].value;
    if(start_time - end_time > 0){
      alert("开始时间应该小于结束时间！");
      return false;
    }else{
      return true;
    }
  }
</script>