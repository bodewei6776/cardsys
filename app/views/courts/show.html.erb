<div class="w96">
  <div class=" r_bt">
    <div class=" r_bt_l">
      <div class=" r_bt_l_a"></div>
      <div class=" r_bt_l_c fb white">时段价格信息</div>
    </div>
    <div class=" r_bt_r">
      <button onclick="window.location.href='/couts/new'" class="submit2 hand" type="button">创建新场地</button>
    </div>
  </div>
  <div class="info">
    <div class="infobox">
      <div class="infobox_bt"><p>时段 <%= @court.name %> 的基本信息</p></div>
      <div class="infobox_nr">
        <ul>
          <li class="cleft">
            <div class="w1">场地名称：</div>
            <div class="w2">
              <%= @court.name %><%if @court.name.blank?%><a class="blank_element"></a><%end%>
            </div>
            <div class="w1">联系人：</div>
            <div class="w2">
              <%= get_user_name(@court.contact)%>
            </div>
          </li>
        </ul>
        <ul>
          <li class="cleft">
            <div class="w1">开放时间：</div>
            <div class="w2">
              <%= generate_time_str(@court.start_time)  %>
              至
              <%= generate_time_str(@court.end_time)  %>
            </div>
          </li>
        </ul>
        <ul>
          <li class="cleft">
            <div class="w1">说明：</div>
            <div class="w2">
              <%= @court.description %><%if @court.description.blank?%><a class="blank_element"></a><%end%>
            </div>
          </li>
        </ul>
      </div>
    </div>
    <div class="h10"></div>
    <div class="infobox">
      <div class="infobox_bt"><p>时段折扣价</p></div>
      <div class="table2">
        <ul class="bttitle black fb ">
          <li class="w5">序号</li>
          <li class="w20">时段</li>
          <li class="w15">标准收费(/小时)</li>
          <li class="w10">可用</li>
          <li class="w20">说明</li>
        </ul>
        <%@period_prices.each_with_index do |period_price,index|%>
          <% available_period = @court.generate_court_period_price(period_price)%>
          <ul class="table_items">
            <li class="w5"><%= index + 1%></li>
            <li class="w20">
              <%=period_price.name%>：<%=period_price.start_time%>:00-<%=period_price.end_time%>:00
            </li>
            <li class="w15"><%=period_price.price%></li>
            <li class="w10">
              <input type="checkbox" name="time_available_<%=period_price.id%>"  value="1" <%if available_period %> checked <%end%> />
            </li>
            <li class="w20"><%=period_price.description%></li>
          </ul>
        <%end%>
      </div>
    </div>
    <div class="h10"></div>
    <div class="input_bd">
      <button class="submit1 hand" type="button" onclick="window.location.href='<%= edit_court_path(@court) %>'">修改</button>&nbsp;&nbsp;&nbsp;&nbsp;
      <button class="submit3 hand" type="button" onclick="window.location.href='<%= courts_path %>'">返回</button></div>
    <div class=" clear"></div>
  </div>
  <div class="h10"></div>
</div>
