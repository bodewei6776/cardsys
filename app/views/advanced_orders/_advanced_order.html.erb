<div class="listcontent_w clearfix cleft">
  <ul>
    <li class="cleft">
      <div class="w1">会员: </div>
      <div class="w2">
        <%= advanced_order.member.name %>
      </div>
      <div class="w1">卡号: </div>
      <div class="w2" style="width:100px;">
        <%= advanced_order.member_card.card_serial_num %>
      </div>
    </li>
    <li class="cleft">
      <div class="w1">啊开始日期:：</div>
      <div class="w2">
        <%= advanced_order.start_date.to_s(:db) %>
      </div>
      <div class="w1">结束日期: </div>
      <div class="w2" style="width:100px;">
        <%= advanced_order.end_date.to_s(:db) %>
      </div>
    </li>
    <li class="cleft">
      <div class="w1">场地：</div>
      <div class="w2">
        <%= advanced_order.court.name %>
      </div>
      <div class="w1">星期</div>
      <div class="w2" style="width:100px;">
        <%= advanced_order.wday %>
      </div>
    </li>
    <li class="cleft">
      <div class="w1">统计：</div>
      <div class="w2">
        <%= advanced_order.orders.size %>
      </div>
      <div class="w1">明细</div>
      <div class="w2" style="width:100px;">
        <% advanced_order.orders.each do |o| -%>
          <%= o.book_record.record_date.to_date.to_s(:db) %>
        <%end -%>
      </div>
    </li>
  </ul>
</div>
<div class="btn t_center">
  <input value="变更周期性预定" type="button" onclick="window.location.href='/advanced_orders/<%= advanced_order.id%>/edit';return false" />
  <input value="取消周期取预定" type="button" onclick="if(confirm('确认要取消么?')){window.location.href='/advanced_orders/<%= @order.id%>/cancle';}" />
  <input value="返回" type="button" onclick="window.history.back();" />
</div>