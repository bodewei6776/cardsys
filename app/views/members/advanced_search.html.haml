.w96
  .r_bt
    .r_bt_l
      .r_bt_l_a
      .r_bt_l_c.fb.white 会员查询
    .r_bt_r
  .soso
    = form_tag "/members/advance_search", :method => "get", :class => "form-profile", :id => "search_form" do
      .w95
        会员名称：
        = text_field_tag :name, params[:name],:autocomplete => "/members/autocomplete_name"
        会员卡号：
        = text_field_tag :card_serial_num, params[:card_serial_num], :autocomplete => "/members/card_serial_nums"
        = submit_tag :search, :value => "搜索"
        = render :partial => "members/advance_search"

  .h10
  .r_bt
    .r_bt_l
      .r_bt_l_a
      .r_bt_l_c.fb.white 会员列表
    .r_bt_r
  .table
    %ul.bttitle.black.fb
      %li.w5 编号
      %li.w10 会员名称
      %li.w15 会员卡信息
      %li.w10 移动电话
      %li.w8 注册日期
      %li.w6 现有金额
      %li.w6 现有次数
      %li.w6 消费金额
      %li.w6 消费次数
      %li.w8 会员生日
      %li.w12 操作
    - @members.each_with_index do |member,index|
      %ul.member_items.table_items
        %li.w5= index + 1
        %li.w10= link_to member.name, member_path(member)
        %li.w15{:style => "overflow:hidden;", :title => raw(member.card_serial_nums)}
          = raw member.card_serial_nums
        %li.w10= member.mobile
        %li.w8= member.created_at.nil? ? "" : member.created_at.to_chinese_mdh
        %li.w6= member.member_card_left_fees
        %li.w6= member.member_card_left_times
        %li.w6= member.member_consume_amounts
        %li.w6= member.balance_times
        %li.w8
          = member.birthday.blank? ? ':' : member.birthday.to_chinese_mdh
        %li.w12
          = link_to '查看', member
          |
          \#{link_to '修改', edit_member_path(member)} |
          \#{link_to '删除', member, :confirm => '确定删除吗?', :method => :delete}
  .h10
  .pages
    = will_paginate @members, :sp => 1
  .h10
