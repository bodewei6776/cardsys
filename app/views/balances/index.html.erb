<div class="w96">
  <div class='soso'>
    <form method="post" action="/balances/balance" class="form-profile">
      <label for="name">卡号：</label>
      <input type="text" name="id" maxlength="30" tabindex="1" value=""  class="inputtext" />
      <label for="name">场地：</label>
      <input type="text" name="court_id" maxlength="30" tabindex="1" value=""  class="inputtext" />
      <label for="name">日期：</label>
      <input type='text' name='record_date' class='date-type-input' />
      <%if !@member.nil?%>
        <fieldset class="hidden">
          <label for="name">会员姓名：</label><%=h @member.name %>
          <label>日期：</label><%=@date %>
        </fieldset>
      <%end%>

      <input type="submit" name="search" class="submit2 hand" value="查询"  tabindex="10" />
    </form>

  </div>


  <div class=" r_bt" >
    <div class=" r_bt_l" >
      <div class=" r_bt_l_a" ></div>
      <div class=" r_bt_l_c fb white" > 待结算查询 </div>
    </div>
  </div>

  <div class="h10"></div>
  <div class=" table">
    <ul class="bttitle black fb " >
      <li class='w5'>编号</li>
      <li class='w10'>预定人姓名</li>
      <li class='w10'>卡号</li>
      <li class='w10'>场地号</li>
      <li class='w10'>消费金额</li>
      <li class='w10'>日期</li>
      <li class='w10'>时段</li>
      <li class='w10'>操作</li>
      <li class='w10'>预定人</li>
    </ul>


    <% @book_records.each_with_index do |record,index| %>
      <ul class='table_items'>
          <li class='w5'><%= index + 1 %></li>
        <% if record.order.member %>
          <li class='w10'><%=h record.order.member.name %></li>
          <li class='w10'><%=h record.order.member_card.card_serial_num %></li>
        <%else%>
          <li class='w10'><%=h record.order.non_member.name %></li>
          <li class='w10'>散客</li>
        <%end%>
        <li class='w10'><%=h record.court.name %></li>
        <li class='w10'><%= record.order.amount %></li>
        <li class='w10'><%= DateUtil::timeshort(record.record_date) %></li>
        <li class='w10'><%= record.start_hour %>:00-<%=h record.end_hour %>:00</li>
        <li class='w10'>
        <a href="<%= edit_order_balance_path(record.order, record.order.balance)%>">结算</a>|
        <a href="<%= edit_book_record_path(record)%>" >添加商品</a>
        </li>

        <li class='w10'><%= record.order.user.login rescue "" %></li>
      </ul>
    <% end -%>

  </div>
  <div class="h10"></div>
  <div class="pages">
    <%= will_paginate @book_records , :sp => 1%>
  </div>
  <div class="h10"></div>


</div>


