<div class="w96">
  <div class='soso'>
    <form method="post" action="/balances/balance" class="form-profile">
      <label for="name">卡号：</label>
      <input type="text" name="id" maxlength="30" tabindex="1" value=""  class="inputtext" />
      <label for="name">场地：</label>
      <input type="text" name="court_id" maxlength="30" tabindex="1" value=""  class="inputtext" />
      <label for="name">日期：</label>
      <input type='text' name='record_date' class='date-type-input' />
      <%if !@member.nil?%>
        <fieldset class="hidden">
          <label for="name">会员姓名：</label><%=h @member.name %>
          <label>日期：</label><%=@date %>
        </fieldset>
      <%end%>

      <input type="submit" name="search" class="submit2 hand" value="查询"  tabindex="10" />
    </form>

  </div>


  <div class=" r_bt" >
    <div class=" r_bt_l" >
      <div class=" r_bt_l_a" ></div>
      <div class=" r_bt_l_c fb white" > 待结算查询 </div>
    </div>
  </div>

  <div class="h10"></div>
  <div class=" table">
    <ul class="bttitle black fb " >
      <li class='w15'>预定人姓名</li>
      <li class='w15'>卡号</li>
      <li class='w15'>场地号</li>
      <li class='w5'>消费金额</li>
      <li class='w10'>日期</li>
      <li class='w15'>时段</li>
      <li class='w15'>操作</li>
    </ul>


    <% for record in @book_records %>
      <ul>
        <% if record.order.member %>
          <li class='w15'><%=h record.order.member.name %></li>
          <li class='w15'><%=h record.order.member_card.card_serial_num %></li>
        <%else%>
          <li class='w15'><%=h record.order.non_member.name %></li>
          <li class='w15'>散客</li>
        <%end%>
        <li><%=h record.court.name %></li>
        <li class='w5'><%= record.order.amount %></li>
        <li class='w10'><%= DateUtil::timeshort(record.record_date) %></li>
        <li class='w15'><%= record.start_hour %>:00-<%=h record.end_hour %>:00</li>
        <li class='w15'>
        <a href="<%= new_order_balance_path(record.order)%>">结算</a>|
        <a href="<%= edit_book_record_path(record)%>" >添加商品</a>
        </li>
      </ul>
    <% end -%>

  </div>


</div>


