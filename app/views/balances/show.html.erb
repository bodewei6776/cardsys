<div class='fformbox_nr'>
  <ul>
    <li>
    <div class="w1">会员：</div>
    <div class="w2"><%= @order.member_name %></div>
    </li>
    <% if @order.is_member? && @current_card %>
      <li >
      <div class="w1">会员卡：</div>
      <div class="w2">
        <%= @current_card.card_serial_num %>  类型:<%= @current_card.card.card_type_desc %> 余额(次):<%= @current_card.left_fee_value %>
      </div>
      </li>
    <% end %>
  </ul>
  <ul>
    <li >
    <div class="w1">场地：</div>
    <div class="w2">
      <%= @book_record.court.name %><%= @book_record.record_date.to_s(:db)%>   
      <%= @book_record.start_hour %>:00-<%= @book_record.end_hour %>:00
    </div>
    </li>
    <li >
    <div class="w1">场地消费：</div>
    <div class="w2">
      <span class="red"><%=  @balance.book_record_amount_desc %></span>
      <label><%= @balance.balance_way_desc %></label>
    </div>
    </li>
  </ul>
  <ul>
    <li >
    <div class="w1">其他消费：</div>
    <div class="w2"><span class="red"><%= @balance.goods_amount_desc %></span>元
      <label class="labelRadio"><%= @balance.goods_balance_type_desc %></label>
    </div>
    </li>
    <li >
    <div class="w1">消费合计：</div>
    <div class="w2">
      <%= @balance.balance_amount_desc%>
    </div>
    </li>
  </ul>
  
</div>
  <div style='float:rihgt;'>
    <%= link_to "打印收条",print_balance_path(@balance) ,:class => "button submit1" ,:style => "padding: 5px 10px;"%>
  </div>


<% unless @good_items.blank? %>
  <%= render :partial => "/orders/order_items_list",:locals => {:good_items => @good_items||[],:order => @order} %>
<% end %>
