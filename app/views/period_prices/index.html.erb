<div class="w96">
  <div class=" r_bt" >
    <div class=" r_bt_l" >
      <div class=" r_bt_l_a" ></div>
      <div class=" r_bt_l_c fb white" >时段价格列表</div>
    </div>
    <div class=" r_bt_r" >
      <button onclick="window.location.href='/period_prices/new'" class="submit2 hand" type="button">创建时段</button>
    </div>
  </div>
  <div class=" table">
    <ul class="bttitle black fb " >
      <li class="w5">编号</li>
      <li class="w10">名称</li>
      <li class="w10">时段类型</li>
      <li class="w10">开始时间</li>
      <li class="w10">结束时间</li>
      <li class="w10">价格</li>
      <li class="w15">说明</li>
      <li class="w15">操作</li>
    </ul>
    <% @period_prices.each_with_index do |period_price,index| %>
      <ul class="table_items">
        <li class="w5"><%= index + 1 %></li>
        <li class="w10"><%=period_price.name%></li>
        <li class="w10"><%=display_period_price_type_desc(period_price.period_type)%></li>
        <li class="w10"><%=period_price.start_time%>:00</li>
        <li class="w10"><%=period_price.end_time%>:00</li>
        <li class="w10"><%=period_price.price%></li>
        <li class="w15"><%=period_price.description%></li>
        <li class="w15"><%= link_to '查看', period_price %> |
          <a href="/period_prices/<%= period_price.id  %>/edit">修改</a>
          <% if period_price.card_period_prices.blank? %> |
            <%= link_to '删除', period_price, :confirm => '确定删除吗?', :method => :delete %>
          <%end%>
        </li>
      </ul>
    <% end %>
  </div>
  <div class="h10"></div>
  <div class="pages">
  </div>
  <div class="h10"></div>
</div>
