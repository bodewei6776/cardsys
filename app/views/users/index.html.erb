<div class="w96">
  <div class=" r_bt" >
    <div class=" r_bt_l" >
      <div class=" r_bt_l_a" ></div>
      <div class=" r_bt_l_c fb white" >用户列表</div>
    </div>

    <div class=" r_bt_r" >
      <button onclick="window.location.href='/users/new'" class="submit2 hand" type="button">添加用户</button>
    </div>
  </div>
  <div class="table">
    <ul class="bttitle black fb " >
      <li class='w10'>ID</li>
      <li class='w15'>昵称</li>
      <li class='w15'>部门</li>
      <li class='w30'>操作</li>
    </ul>
    <% for user in @users %>
      <ul class="member_items table_items">
        <li class='w10'><%= user.login %></li>
        <li class='w15'><%= user.user_name %></li>
        <li class='w15'><%=user.departments.collect(&:name).join(",") if user.departments%></li>
        <li class='w30'>
        <%= link_to '查看', user,:class => "hand" %> | <%= link_to '修改', edit_user_path(user),:class => "hand"%>
         |<%= link_to '删除', user, :confirm => '确定删除吗?', :method => :delete ,:class => "hand"%> 
         |<%= link_to '设置权限', '/users/user_power_index?id='+user.id.to_s,:class => "hand"%>
        </li>
      </ul>
    <% end %>
  </div>
 <div class="h10"></div>
  <div class="pages">
    <%= will_paginate @users, :sp => 1%>
  </div>
  <div class="h10"></div>

</div>
