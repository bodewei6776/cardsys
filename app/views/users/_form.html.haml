= form_for @user do |f|
  = render :partial => "layouts/errors", :locals => {:target => @user}
  .fformbox_nr
    %ul
      %li
        .w1 用户名：
        .w2
          = f.text_field :login
      %li
        .w1 昵&nbsp;&nbsp;&nbsp;称：
        .w2
          = f.text_field :user_name


    %ul
      %li
        .w1 密&nbsp;&nbsp;&nbsp;码：
        .w2
          = f.password_field :password
      %li
        .w1 密码确认：
        .w2
          = f.password_field :password_confirmation
    %ul
      %li
        .w1 所属部门：
        %div{:style => "width:500px;"}
          - @departments.each do |d|
            = check_box_tag "dep[]",d.id.to_s, @user.departments.presence && @user.departments.include?(d)
            = d.name

    %ul
      %li
        = f.submit "提交", :class => "submit1 float_right"
